<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body class="container">

    <header>
        <% include ../partials/header %>
    </header>

    <main>
        <div class="row">
            <div class="col-sm-8">
            
                <div class="jumbotron">
                    <h1>Promociones destacadas</h1>

					<ul>
					    <% resultado.docs.forEach(function(doc) { %>
					        <li>Title - <%= doc.title %>
					        Header - <%= doc.summary %>
					        Description - <%= doc.description %>
					        Url - <%= doc.link %></li>
					    <% }); %>
					</ul>
                </div>
                
            </div>
            <div class="col-sm-4">
                
                <div class="well">
                    <h3>Bienvenido</h3>
                    <a href="http://localhost:2007/user"><%= perfil.doc.email%></a>
                </div>

            </div>
        </div>
    </main>

    <footer>
        <% include ../partials/footer %>
    </footer>
    
</body>
</html>